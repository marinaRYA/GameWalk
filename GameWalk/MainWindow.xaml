<Window x:Class="GameWalk.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameWalk"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="300">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Начать игру" Width="120" Height="30" Margin="5" Click="StartGame_Click"/>
            <Button Content="Продолжить игру" Width="120" Height="30" Margin="5" Click="ContinueGame_Click"/>
            <Button Content="Выход" Width="120" Height="30" Margin="5" Click="Exit_Click"/>
        </StackPanel>
    </Grid>
</Window>
